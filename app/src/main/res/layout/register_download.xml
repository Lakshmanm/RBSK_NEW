<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#815CC5"
    android:keepScreenOn="true"
    tools:context=".Register_download">

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/loginlogo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_register_setup"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:background="#64C2DC"
                android:text="Setup"
                android:textColor="#FCFEFC"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_register_checkSetupStatus"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:background="#64C2DC"
                android:text="Check Setup Status"
                android:textColor="#FCFEFC"
                android:textSize="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_register_continue"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:background="#64C2DC"
                android:text="Continue"
                android:textColor="#FCFEFC"
                android:textSize="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_incrementalData"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:background="#64C2DC"
                android:text="IncrementalData"
                android:textColor="#FCFEFC"
                android:textSize="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>