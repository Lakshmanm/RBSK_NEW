<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="6" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_border"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#6b6b76"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <EditText
            android:id="@+id/et_others_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@drawable/border_style_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Allergies" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_others_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9999A0"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Close"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>