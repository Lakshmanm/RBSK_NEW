<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="8.5"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#6B6B76"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Diet"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6B6B76" />

        <EditText
            android:id="@+id/et_recommendation_diet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_background_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments"
            android:maxLength="100" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Personal Hygiene"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6B6B76" />

        <EditText
            android:id="@+id/et_recommendation_personel_hygine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_background_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments"
            android:maxLength="100" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Oral Hygiene"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6B6B76" />

        <EditText
            android:id="@+id/et_recommendation_oral_hygiene"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_background_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments"
            android:maxLength="100" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Prescribed Medications"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6B6B76" />

        <EditText
            android:id="@+id/et_recommendation_prescribed_medications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_background_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments"
            android:maxLength="100" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Others"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6B6B76" />

        <EditText
            android:id="@+id/et_recommendation_others"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_background_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments"
            android:maxLength="100" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_recommendations_close"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="#9999A0"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Close"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_recommendations_save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#45cfc1"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Save"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>