<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#ffffff"
  android:orientation="vertical"
    android:keepScreenOn="true">

  <LinearLayout
    android:id="@+id/ll_expand_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="All Health Conditions"
      android:textColor="#000000"
      android:textSize="22dp"
      android:textStyle="bold" />
  </LinearLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/iv_expand_display"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:background="@drawable/right_arrow" />

    <TextView
      android:id="@+id/tv_healthConditionName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:layout_toRightOf="@+id/iv_expand_display"
      android:text="Health Condition Name"
      android:textColor="#000000"
      android:textSize="20dp" />

    <ImageView
      android:id="@+id/iv_expand_parent"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:background="@drawable/right_arrow" />
  </RelativeLayout>

</LinearLayout>
