<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="4.3" android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Treatment"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#6b6b76"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:weightSum="3" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Diagnosis"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_local_treatment_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
             android:digits="@string/dataAllowData"
            android:background="@drawable/border_style_edittext"
            android:ems="10"
            android:hint="Add Comments" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:weightSum="3" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medication Given"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_local_treatment_medication_given"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/border_style_edittext"
            android:digits="@string/dataAllowData"
            android:ems="10"
            android:hint="Add Comments" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_local_treatment_close"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="#9999A0"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Close"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_local_treatment_save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#45cfc1"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Save"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>