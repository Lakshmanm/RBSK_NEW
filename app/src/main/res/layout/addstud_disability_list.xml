<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:weightSum="5" >

        <TextView
            android:id="@+id/tv_add_stud_disability_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="Disability Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#eee" />

        <TextView
            android:id="@+id/tv_add_stud_disability_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Specific Condition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#eee" />

        <TextView
            android:id="@+id/tv_add_stud_disability_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="% of Disability"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#eee" />

        <ImageView
            android:id="@+id/iv_disability_delete"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/deletex"
          />
    </LinearLayout>

</LinearLayout>