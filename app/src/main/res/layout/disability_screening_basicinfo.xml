<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border"
    android:orientation="vertical"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tv_screening_disablity_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disablity Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6b6b76"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_screening_basic_student_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="%"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6b6b76"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_screening_basic_student_specific_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Specific Condition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#6b6b76"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>