<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="10"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/iv_edit_institute_basic_info_school_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.6"
                    android:src="@drawable/ic_launcher" />

                <Button
                    android:id="@+id/btn_edit_institute_basic_info_view_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/buttonbg_violet"
                    android:text="View Gallery"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:weightSum="5.2">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institute Name"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="@string/dataAllowData"
                            android:editable="false"
                            android:ems="10"
                            android:hint="Zilla Parshid High School"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DISE Code"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_dise_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="21312132as"></EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institute Type"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_institute_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="School"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institute Category"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_institute_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="Regular"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="School Category"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_school_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="High School"></EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_contact"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="Work"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DISE Code"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_info_contact_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="08912900328"></EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#6b6b76"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_edit_institute_basic_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:editable="false"
                            android:ems="10"
                            android:hint="N/A"></EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="bottom|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_edit_institute_basic_next"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonbg_violet"
                        android:text="Next"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>