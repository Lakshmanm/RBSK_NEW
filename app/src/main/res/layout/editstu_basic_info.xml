<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/iv_edit_stu_basic_info_child_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:src="@drawable/ic_launcher" />

                <Button
                    android:id="@+id/btn_edit_stu_basic_info_view_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight=".2"
                    android:background="@drawable/buttonbg_green"
                    android:text="View Gallery"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.4"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name *"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_student_firstname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validName"
                                android:ems="10"
                                android:hint="First Name"
                                android:imeOptions="actionNext"
                                android:maxLength="50"
                                android:singleLine="true"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Middle Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_middle_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validName"
                                android:ems="10"
                                android:hint="Middle Name"
                                android:imeOptions="actionNext"
                                android:maxLength="50"
                                android:singleLine="true"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="School Category"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validName"
                                android:ems="10"
                                android:hint="Last Name"
                                android:imeOptions="actionNext"
                                android:maxLength="50"
                                android:singleLine="true"></EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aadhaar No."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_aadhaar_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Eg:AP99999999"
                                android:imeOptions="actionNext"
                                android:maxLength="12"
                                android:numeric="integer"
                                android:singleLine="true"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth *"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ems="10"
                                android:focusable="false"
                                android:hint="dd-mm-yyyy"
                                android:imeOptions="actionNext"
                                android:singleLine="true"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender *"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spn_edit_student_basic_info_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Gender" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Religion *"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spn_edit_student_basic_info_religion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caste *"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spn_edit_student_basic_info_caste"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NTR Vydya Seva No."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_ntr_vidya_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validText"
                                android:ems="10"
                                android:hint="Eg:AP99999999"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:singleLine="true"></EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ration Card No."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_ration_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validText"
                                android:ems="10"
                                android:hint="Eg:AP99999999"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:singleLine="true"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Identification Marks"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_info_id_marks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/validName"
                                android:ems="10"
                                android:hint="Eg:A mole on right hand"
                                android:imeOptions="actionNext"
                                android:maxLength="100"
                                android:singleLine="true"></EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Contact"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#6b6b76"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_edit_student_basic_emergency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="+919999999999"
                                android:imeOptions="actionGo"
                                android:maxLength="11"
                                android:numeric="integer"
                                android:singleLine="true"></EditText>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:gravity="bottom|right"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_edit_student_basic_next"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonbg_green"
                        android:text="Next"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>