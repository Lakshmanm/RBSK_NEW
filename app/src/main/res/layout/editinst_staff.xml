<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/callheader"
        layout="@layout/staff_table_header" />

    <ExpandableListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"         
        android:fastScrollEnabled="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_edit_institute_staff_previous"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonbg_grey"
            android:text="Previous"
            android:scrollbars="vertical"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_edit_institute_staff_next"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:background="@drawable/buttonbg_violet"
            android:text="Next"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>