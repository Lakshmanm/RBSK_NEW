<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#815CC5" >

    <LinearLayout
        android:id="@+id/ll_final_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Identify Yourself"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="in MHT 132"
            android:textColor="#b9a5df"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_background" 
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_final_login_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="abc"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_final_login_password"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="actionGo"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#FCFEFC"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_final_login"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="15dp"
                android:background="#64C2DC"
                android:text="Continue"
                android:textColor="#FCFEFC"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_final_return"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginBottom="20dp"
                android:background="#625489"
                android:text="Return to MHT Login"
                android:textColor="#FCFEFC"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_final_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Forgot Password ?"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>