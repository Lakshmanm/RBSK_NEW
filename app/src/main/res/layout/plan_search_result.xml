<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_plan"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="5.70" >

    <TextView
        android:id="@+id/tv_plan_search_result_dise_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DISE Code"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_plan_search_result_inst_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Institute Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_plan_search_result_strength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="Strength"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_plan_search_result_screening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="Loading ..."
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_plan_search_result_planned_for"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Planned For"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_plan_search_result_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/schedule_inst"
            android:visibility="gone" />
        

        <ImageView
            android:id="@+id/iv_plan_search_result_schedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/schedule_inst" />

        <ImageView
            android:id="@+id/iv_plan_search_result_institute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/iv_plan_search_result_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/adduser" />
    </LinearLayout>

</LinearLayout>