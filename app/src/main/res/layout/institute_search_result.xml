<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_inst_search_dise_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DISE Code"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_inst_search_inst_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:text="Institute Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_inst_search_screening_per"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Screening %"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <TextView
        android:id="@+id/tv_inst_search_last_screened"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Last Screened"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6b6b76" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".9"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_inst_search_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/iv_inst_search_students"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/group" />

        <ImageView
            android:id="@+id/iv_inst_search_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/adduser" />
    </LinearLayout>

</LinearLayout>